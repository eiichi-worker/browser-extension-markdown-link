{
    "manifest_version": 2,
    "name": "Copy Markdown Link",
    "description": "表示中のタブのLinkをMarkdown形式でコピーします",
    "version": "{{VERSION}}",
    "default_locale": "en",
    "icons": {
        "128": "icon/icon-128.png",
        "512": "icon/icon-512.png"
    },
    "background": {
        "scripts": [
            "my_modules/TabFunctions.js",
            "js/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "128": "icon/icon-128.png",
            "512": "icon/icon-512.png"
        },
        "default_title": "Copy Markdown Link",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "clipboardWrite",
        "contextMenus"
    ]
}